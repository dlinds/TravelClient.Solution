<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - TravelClient.Solution</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
  <div class="container">
    <ul class="nav nav-justified shadow-sm">
      <li class="nav-item border-end menu-item travel-color-darkest">
        <a class="nav-link link-secondary text-white py-4 px-5" href="/">Home</a>
      </li>
      <li class="nav-item border-end menu-item travel-color-darkest dropdown">
        <a class="nav-link link-secondary text-white py-4 px-5 dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Destinations
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <li class="text-center"><a class="dropdown-item" href="/destinations"><u>All Destinations</u></a></li>
          <li class="text-center"><a class="dropdown-item" href="/destinations/create"><u>Add New Destination</u></a></li>
          <li class="text-center"><a class="dropdown-item" href="/destinations/GetRandom"><u>Get Random Destination</u></a></li>
        </ul>
      </li>
      <li class="nav-item border-end menu-item travel-color-darkest dropdown">
        <a class="nav-link link-secondary text-white py-4 px-5 dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Reviews
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <li class="text-center"><a class="dropdown-item" href="/Reviews"><u>All Reviews</u></a></li>
          <li class="my-2">
            <form class="d-flex px-2" action="/Reviews/" method="Get">
              <input type="hidden" value="country" name="type">
              <input class="form-control me-1" type="search" name="value" placeholder="Country Search" aria-label="Search">
              <button class="btn travel-color-darkest text-white" type="submit">Go</button>
            </form>
          </li>
          <li class="my-2">
            <form class="d-flex px-2" action="/Reviews/" method="Get">
              <input type="hidden" value="city" name="type">
              <input class="form-control me-1" type="search" name="value" placeholder="City Search" aria-label="Search">
              <button class="btn travel-color-darkest text-white" type="submit">Go</button>
            </form>
          </li>

        </ul>
      </li>
      <li class="nav-item border-end menu-item travel-color-darkest">
        <a class="nav-link link-secondary text-white py-4 px-5" href="/account">Account</a>
      </li>
    </ul>
    <div class="container-fluid px-0 pt-3 pb-2 ">
      @RenderBody()
      </main>
    </div>
  </div>
  @* <footer class="border-top footer text-center text-white travel-color-darkest">
    <div class="container fw-bolder">
    &copy; 2022 - Travel Client
    </div>
    </footer> *@
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
